<div style="margin-right:-15px;margin-left:-15px;">
  <div class="col-sm-offset-2 col-sm-10 actions">
    <h2>Forgot your password?</h2>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, class:'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 actions">
      <%= f.submit "Send me reset password instructions","data-disable-with":"Loading...",class:'btn btn-primary' %>
    </div>
  </div>
<% end %>

<div style="margin-right:-15px;margin-left:-15px;">
  <div class="col-sm-offset-2 col-sm-10 actions">
    <%= render "devise/shared/links" %>
  </div>
</div>
