<h1>Listing Artists</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @artists.each do |artist| %>
        <tr data-row-id="<%= artist.id -%>">
          <td data-attr="name"><%= link_to artist.name, artist %></td>
          <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
          <td>
            <a href="<%= url_for(artist) -%>" data-confirm="Are you sure?" class="btn btn-primary" rel="nofollow" data-method="delete" title="Destroy">
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @artists %>
<br>

<%= link_to 'New Artist', new_artist_path %>
