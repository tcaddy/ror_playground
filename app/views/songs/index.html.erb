<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>
      <th>Album</th>
      <th>Name</th>
      <th>Track</th>
      <th>Disk</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr data-row-id="<%= song.id -%>">
        <td><%= song.album ? link_to(song.album.name,song.album) : nil %></td>
        <td><%= song.name %></td>
        <td data-attr="track"><%= song.track %></td>
        <td data-attr="disk"><%= song.disk %></td>
        <td><%= song_duration song.duration %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @songs %>
<br>

