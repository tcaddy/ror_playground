<h1>Listing Songs</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Album</th>
        <th>Name</th>
        <th>Track</th>
        <th>Disk</th>
        <th>Duration</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
        <tr data-row-id="<%= song.id -%>">
          <td data-attr="album"><%= song.album ? link_to(song.album.name,song.album) : nil %></td>
          <td data-attr="name"><%= link_to song.name, song %></td>
          <td data-attr="track"><%= song.track %></td>
          <td data-attr="disk"><%= song.disk %></td>
          <td data-attr="duration"><%= song_duration song.duration %></td>
          <td><%= link_to 'Edit', edit_song_path(song) %></td>
          <td>
            <a href="<%= url_for(song) -%>" data-confirm="Are you sure?" class="btn btn-primary" rel="nofollow" data-method="delete" title="Destroy">
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="text-center">
  <%= paginate @songs %>
</div>
<br>

<%= link_to 'New Song', new_song_path %>
